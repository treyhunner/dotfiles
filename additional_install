# Install core packages
sudo apt-get -y install xclip git tmux quassel-client shutter gimp curl python-pip python3-pip silversearcher-ag nautilus-dropbox zsh htop xsel texlive-latex-recommended texlive-latex-extra texlive-fonts-recommended compizconfig-settings-manager ubuntu-restricted-extras chrome-gnome-shell gnome-tweaks

sudo apt-get -y remove dell-super-key  # this package is dumb...

echo "Installing setuptools, pip, and virtualenv"
sudo apt-get install -y python-setuptools
sudo pip install virtualenvwrapper
curl https://pyenv.run | bash
git clone https://github.com/pyenv/pyenv-virtualenvwrapper.git $(pyenv root)/plugins/pyenv-virtualenvwrapper

echo "CapsLock -> Ctrl"
gsettings set org.gnome.desktop.input-sources xkb-options "['caps:ctrl_modifier']"

# Add extra sources
sudo add-apt-repository ppa:neovim-ppa/unstable -y
sudo add-apt-repository ppa:fkrull/deadsnakes -y
sudo add-apt-repository ppa:brightbox/ruby-ng -y
curl -sL https://deb.nodesource.com/setup_8.x | sudo -E bash -
sudo apt-get update

# Python3.6, Ruby, Node.js
sudo apt-get install -y python3.6 ruby ruby-dev nodejs

# NeoVim
sudo apt-get install -y neovim
sudo update-alternatives --install /usr/bin/vi vi /usr/bin/nvim 60
sudo update-alternatives --install /usr/bin/vim vim /usr/bin/nvim 60
sudo update-alternatives --install /usr/bin/editor editor /usr/bin/nvim 60

# Ruby setup
sudo gem install bundler

# Heroku
sudo snap install heroku

# Skype install
curl -sL 'https://go.skype.com/skypeforlinux-64.deb' > ~/Downloads/skype.deb
sudo dpkg --install ~/Downloads/skype.deb

# Set shell to ZSH
echo "Enter password to set shell to zsh"
chsh -s $(which zsh)
